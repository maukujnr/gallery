/* Requires the Docker Pipeline plugin */
pipeline {
    agent { docker { image 'node:18.18.0-alpine3.18' } }
    stages {
        stage('clone') {
            steps {
                sh 'node --version'
            }
        }
        stage('build') {
            steps {
                sh 'node --version'
            }
        }
        stage('test') {
            steps {
                sh 'node --version'
            }
        }
        stage('deploy') {
            steps {
                sh 'node --version'
            }
        }
    }
}